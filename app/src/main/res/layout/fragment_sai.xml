<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.SaiFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_sai_SaiFragment"
            android:layout_width="match_parent"
            android:layout_height="242dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/chat2"
            android:gravity="center"
            android:text="@string/sairoi"
            android:textSize="16dp" />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="230dp"
            android:src="@drawable/sai" />

    </FrameLayout>

    <Button
        android:layout_marginTop="70dp"
        android:id="@+id/btn_lai_SaiFragmet"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_home"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="@string/laiphat"
        android:textColor="@color/red"
        android:textSize="28sp" />

</LinearLayout>